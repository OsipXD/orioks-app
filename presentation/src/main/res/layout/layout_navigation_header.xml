<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:maxWidth="@dimen/nav_header_width"
                                             android:layout_height="@dimen/nav_header_height"
                                             android:background="@color/colorPrimary"
                                             android:gravity="center_vertical"
                                             android:orientation="vertical"
                                             android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="@dimen/nav_header_width"
        android:layout_height="match_parent"
        android:background="@drawable/ic_miet_header"
        app:backgroundTint="#D00277BD"
        app:backgroundTintMode="src_over" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/ic_circle"
        android:layout_marginStart="@dimen/space_medium"
        android:layout_marginBottom="@dimen/space_medium"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_person_black_24dp"
        app:backgroundTint="@color/grade_amber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/name_text_view" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_medium"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/number_text_view"
        tools:text="Осип Фаткуллин"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_medium"
        android:layout_marginBottom="@dimen/space_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="8140868"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/group_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_medium"
        android:layout_marginBottom="@dimen/space_medium"
        android:maxLength="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/number_text_view"
        tools:text="МП-45"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_medium"
        android:layout_marginEnd="@dimen/space_medium"
        app:layout_constraintStart_toEndOf="@id/avatar_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
